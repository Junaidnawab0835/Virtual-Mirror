<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="match_parent"
            android:layout_marginTop="200dp"
            android:layout_height="200dp"
            app:lottie_fallbackRes="@drawable/chat"
            app:lottie_url="https://assets3.lottiefiles.com/private_files/lf30_bcVsEA.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

        <TextView
            android:layout_width="match_parent"
            android:text="Name:"
            android:drawableLeft="@drawable/ic_name"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:text="Name"
            android:id="@+id/profile_name_edtxt"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:text="Email Address:"
            android:drawableLeft="@drawable/ic_mail"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:text="Name@test.com"
            android:id="@+id/profile_mail_edtxt"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:text="Addresss:"
            android:drawableLeft="@drawable/ic_address"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:text="Address"
            android:id="@+id/profile_address_edtxt"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:layout_height="wrap_content">
        </TextView>



    </LinearLayout>

</FrameLayout>